@model MvcMovie.Models.MovieGenreViewModel

@{
    ViewData["Title"] = "My Movies";
}

<div class="modern-card">
    <div class="card-header-modern">
        <h1 class="mb-0">üé¨ My Movies</h1>
    </div>
    
    <div class="d-flex justify-content-between align-items-center mb-4">
        <a asp-action="Create" class="btn btn-modern">
            ‚ûï Add New Movie
        </a>
    </div>

    <div class="filter-section">
        <form asp-controller="Movies" asp-action="Index" method="get">
            <div class="form-group">
                <label asp-for="MovieGenre">Genre:</label>
                <select asp-for="MovieGenre" asp-items="Model.Genres" class="form-control">
                    <option value="">All</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="MovieYear">Year:</label>
                <input type="number" asp-for="MovieYear" class="form-control" placeholder="Ex: 2020" />
            </div>
            <div class="form-group">
                <label asp-for="SearchString">Title:</label>
                <input type="text" asp-for="SearchString" class="form-control" placeholder="Search by title..." />
            </div>
            <div class="form-group">
                <label>&nbsp;</label>
                <input type="submit" value="üîç Filter" class="btn btn-primary form-control" />
            </div>
        </form>
    </div>

    @if (Model.Movies != null && Model.Movies.Any())
    {
        <div class="movies-grid">
            @foreach (var item in Model.Movies)
            {
                <div class="movie-card">
                    <div class="movie-card-header">
                        <h3 class="movie-card-title text-white mb-0">@Html.DisplayFor(modelItem => item.Title)</h3>
                    </div>
                    <div class="movie-card-body">
                        <div class="movie-card-info">
                            <div class="movie-card-info-item">
                                <span class="movie-card-label">üìÖ Release Date:</span>
                                <span class="movie-card-value">@Html.DisplayFor(modelItem => item.ReleaseDate)</span>
                            </div>
                            <div class="movie-card-info-item">
                                <span class="movie-card-label">üé≠ Genre:</span>
                                <span class="genre-badge">@Html.DisplayFor(modelItem => item.Genre)</span>
                            </div>
                            <div class="movie-card-info-item">
                                <span class="movie-card-label">üí∞ Price:</span>
                                <span class="movie-card-value">$@Html.DisplayFor(modelItem => item.Price)</span>
                            </div>
                            <div class="movie-card-info-item">
                                <span class="movie-card-label">‚≠ê Rating:</span>
                                <span class="rating-display">@Html.DisplayFor(modelItem => item.Rating)</span>
                            </div>
                        </div>
                        <div class="movie-card-actions">
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn-details">View Details</a>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn-edit">Edit</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn-delete">Delete</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <div style="font-size: 4rem; margin-bottom: 1rem;">üé¨</div>
            <h3>No movies found</h3>
            <p class="text-muted">Add your first movie by clicking the button above!</p>
            <a asp-action="Create" class="btn btn-modern mt-3">Add Movie</a>
        </div>
    }
</div>